<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_set_pass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Set password for the album"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/enter_set_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Confirm password"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="text"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_set_number_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Enter your number phone"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/set_number_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Number phone"
        android:inputType="text"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/set_pass_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#BEBFBE"
            android:elevation="15dp"
            android:text="Cancel"
            android:textColor="#138A31" />

        <Button
            android:id="@+id/confirm_pass_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#52C383"
            android:text="Create"
            android:textColor="#EFEBEB" />

    </LinearLayout>


</LinearLayout>